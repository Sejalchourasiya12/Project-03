<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="in.co.rays.project_3.dto">

    <class name="BankDTO" table="ST_BANK">

        <id name="id" type="java.lang.Long">
            <column name="ID"/>
            <generator class="increment"/>
        </id>

        <property name="accountNo" type="java.lang.String">
            <column name="ACCOUNTNO"/>
        </property>

        <property name="accountHolder" type="java.lang.String">
            <column name="ACCOUNTHOLDER"/>
        </property>

        <property name="accountType" type="java.lang.String">
            <column name="ACCOUNTTYPE"/>
        </property>

        <property name="openingDate" type="java.util.Date">
            <column name="OPENINGDATE"/>
        </property>

        <property name="balance" type="double">
            <column name="BALANCE"/>
        </property>

        <property name="accountLimit" type="double">
            <column name="ACCOUNTLIMIT"/>
        </property>


        <!-- Audit fields from BaseDTO -->
        <property name="createdBy" type="java.lang.String">
            <column name="CREATED_BY"/>
        </property>

        <property name="modifiedBy" type="java.lang.String">
            <column name="MODIFIED_BY"/>
        </property>

        <property name="createdDatetime" type="java.sql.Timestamp">
            <column name="CREATED_DATETIME"/>
        </property>

        <property name="modifiedDatetime" type="java.sql.Timestamp">
            <column name="MODIFIED_DATETIME"/>
        </property>

    </class>
</hibernate-mapping>
